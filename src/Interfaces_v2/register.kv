#:include home.kv

<register>:
    BoxLayout:
        id: register_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Register'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Name'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: name
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Surname'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: surname
                multiline:False
                password:True
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Email'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: email
                multiline:False
                password:True
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Confirm Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: confirm_pass
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Register'
            font_size: 24

            on_press: root.do_go_to_login(login.text, password.text)