#:include home.kv
#:include login.kv

<register>:
    on_pre_enter: root.resetForm()
    GridLayout:
        rows: 3
        Label:
            size_hint_y:0.075
        GridLayout:
            cols: 3
            size_hint_y:0.81
            Label:
                size_hint_x:0.3
            MDCard:
                padding: '15dp'
                size_hint_x:0.4
                BoxLayout:
                    id: register_layout
                    orientation: 'vertical'
                    padding: ['60dp','25dp','60dp','25dp']
                    spacing: '15dp'

                    MDLabel:
                        theme_text_color: 'Primary'
                        text: "Register"
                        font_size: 32
                        halign: 'center'

                    BoxLayout:
                        orientation: 'vertical'

                        MDLabel:
                            theme_text_color: 'Primary'
                            text: 'Name:'
                            font_size: 18
                            halign: 'left'
                            text_size: root.width-20, 20


                        TextInput:
                            id: name
                            multiline:False
                            font_size: 14

                    BoxLayout:
                        orientation: 'vertical'
                        MDLabel:
                            theme_text_color: 'Primary'
                            text: 'Surname:'
                            halign: 'left'
                            font_size: 18
                            text_size: root.width-20, 20

                        TextInput:
                            id: surname
                            multiline:False
                            font_size: 14

                    BoxLayout:
                        orientation: 'vertical'
                        MDLabel:
                            theme_text_color: 'Primary'
                            text: 'Email:'
                            halign: 'left'
                            font_size: 18
                            text_size: root.width-20, 20

                        TextInput:
                            id: email
                            multiline:False
                            font_size: 14

                    BoxLayout:
                        orientation: 'vertical'
                        MDLabel:
                            theme_text_color: 'Primary'
                            text: 'Password:'
                            halign: 'left'
                            font_size: 18
                            text_size: root.width-20, 20

                        TextInput:
                            id: password
                            multiline:False
                            password:True
                            font_size: 14

                    BoxLayout:
                        orientation: 'vertical'
                        MDLabel:
                            theme_text_color: 'Primary'
                            text: 'Confirm Password:'
                            halign: 'left'
                            font_size: 18
                            text_size: root.width-20, 20

                        TextInput:
                            id: confirm_pass
                            multiline:False
                            password:True
                            font_size: 14
                    GridLayout:
                        cols:3
                        size_hint_y: None
                        height: '35dp'
                        spacing: '20dp'
                        Label:
                            size_hint_x:0.26
                        Button:
                            text: 'Back'
                            font_size: 16
                            size_hint_x:0.32
                            on_press: app.nav_to("login")
                        Button:
                            text: 'Register'
                            font_size: 16
                            size_hint_x:0.32
                            on_press: root.do_go_to_login(login.text, password.text)

            Label:
                size_hint_x:0.3
        GridLayout:
            size_hint_y:0.075
            cols: 3
            Label
            Label
            GridLayout:
                rows: 3
                Label
                Label
                Image:
                    source: 'images/advance.png'


