#:import Toolbar kivymd.toolbar.Toolbar
#:import MDCard kivymd.card.MDCard
#:import MDList kivymd.list.MDList
#:include nav_drawer.kv

# Home Screen Layout.
<home>:
    on_pre_enter: root.load_message()
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Defendr'
            background_color: app.theme_cls.primary_dark
            left_action_items: [['menu', lambda x: app.nav_drawer.toggle()]]
        BoxLayout:
            id: home_layout
            orientation: 'vertical'

            MDLabel:
                id: lbl_welcome_masseg
                theme_text_color: 'Primary'
                text: "Welcome To Defendr"
                font_size: 38
                size_hint_y: 0.43
                halign: 'center'
            BoxLayout:
                id: on_off_switch
                orientation: 'horizontal'
                size_hint_y: 0.14
                MDLabel:
                    size_hint_x: 0.34
                ToggleButton:
                    text: 'Start Defending'
                    group: 'system_status'
                    size_hint_x: 0.16
                    on_release: root.start_xdp()
                ToggleButton:
                    text: 'Stop Defending'
                    state: 'down'
                    group: 'system_status'
                    size_hint_x: 0.16
                    on_release: root.stop_xdp()
                MDLabel:
                    size_hint_x: 0.34
            MDLabel:
                size_hint_y: 0.43

